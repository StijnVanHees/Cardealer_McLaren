@model McLaren_Cardealer.ViewModels.GebruikerListViewModel
@{
    ViewData["Title"] = "Index";
}
<h2> Users</h2>
<p>
    <a asp-action="Create"> Create new user</a>
</p>
<p>
    <a asp-action="GrantPermission">Change role</a>
</p>
<table>
    <thead>
        <tr>
            <th class="col-md-4">
                @Html.DisplayNameFor(v => v.Gebruikers[0].Id)
            </th>
            <th class="col-md-4">
                @Html.DisplayNameFor(v => v.Gebruikers[0].Naam)
            </th>
            <th class="col-md-4">
                @Html.DisplayNameFor(v => v.Gebruikers[0].Email)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var gebruiker in Model.Gebruikers)
        {
            <tr>
                <th class="col-md-4">
                    @Html.DisplayFor(modelitem => gebruiker.Id)
                </th>
                <td class="col-md-4">
                    @Html.DisplayFor(modelitem => gebruiker.Naam)
                </td>
                <td class="col-md-4">
                    @Html.DisplayFor(modelitem => gebruiker.Email)
                </td>
                <td class="col-md-4">
                    <a asp-action="Edit" asp-route-id="@gebruiker.Id">Edit</a>

                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@gebruiker.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>